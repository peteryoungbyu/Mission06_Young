@{
}
@model List<MovieEntry> //Brings in the model 
<table class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Notes</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model) @*Displays each movie in its own row*@
        {
            <tr>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Notes</td>
                <td><a class="btn btn-light" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td> @*Calls the edit route, passing in the MovieId as an id parameter in the URL*@
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td> @*Calls the delete route*@
            </tr>
        }

    </tbody>
</table>

