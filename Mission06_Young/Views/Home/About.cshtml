@{
    ViewData["Title"] = "Get to know Joel";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-primary mb-3">@ViewData["Title"]</h1>
            <p class="lead text-muted">Comedian, Podcaster, and Film Collector</p>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="card shadow h-100 border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-3">
                            <span class="badge bg-primary fs-5">🎭 Comedy</span>
                        </div>
                        <h3 class="card-title">Quick Wits Comedy</h3>
                        <p class="card-text flex-grow-1">
                            Joel performs regularly at Quick Wits Comedy, bringing laughter and entertainment 
                            to audiences with his unique comedic style.
                        </p>
                        <div class="text-center mb-3">
                            <img src="~/img/quickwits.png" class="img-fluid rounded shadow-sm" alt="Quick Wits Comedy" />
                        </div>
                        <a href="https://www.qwcomedy.com/" target="_blank" class="btn btn-primary btn-lg">
                            Visit Quick Wits Comedy <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow h-100 border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-3">
                            <span class="badge bg-success fs-5">🎙️ Podcast</span>
                        </div>
                        <h3 class="card-title">Baconsale Podcast</h3>
                        <p class="card-text flex-grow-1">
                            Check out the Baconsale podcast, where Joel and his co-hosts discuss movies, 
                            pop culture, and everything in between!
                        </p>
                        <a href="https://baconsale.com/" target="_blank" class="btn btn-success btn-lg mb-3">
                            Visit Baconsale <i class="bi bi-arrow-right"></i>
                        </a>
                        <a href="https://baconsale.com/" target="_blank">
                            <img src="~/img/baconsale.jpg" class="img-fluid rounded shadow-sm" alt="Baconsale Podcast" />
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-house"></i> Back to Home
            </a>
        </div>
    </div>
</div>



